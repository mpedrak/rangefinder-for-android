<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <FrameLayout
        android:id="@+id/cameraContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="100dp"
        >

        <com.example.rangefinder.AutoFitTextureView
            android:id="@+id/cameraView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            />

        <View
            android:id="@+id/focusCircle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/focus_circle"
            android:alpha="0.7"
            />

        <View
            android:id="@+id/focusRectangle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/focus_rectangle"
            android:alpha="0"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/rightPanel"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="25dp"
        >

        <TextView
            android:id="@+id/distanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="50dp"
            />

        <Button
            android:id="@+id/flashButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flashlight"
            android:textSize="17sp"
            />

        <LinearLayout
            android:id="@+id/cameraButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginTop="7dp"
            />

            <Button
                android:id="@+id/viewSavedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW SAVED"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textSize="17sp"
                android:layout_marginEnd="8dp"
                />

        <LinearLayout
            android:id="@+id/zoomButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:layout_gravity="bottom|center_horizontal"
            />


    </LinearLayout>

</FrameLayout>